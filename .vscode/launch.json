{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Receiver Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/receiver",
            "jinja": true,
            "envFile": "${workspaceFolder}/.env.dev",
        },
        {
            "name": "Processor Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "cwd": "${workspaceFolder}/processor/app",
            "jinja": true,
            "envFile": "${workspaceFolder}/.env.dev",
        },
    ]
}